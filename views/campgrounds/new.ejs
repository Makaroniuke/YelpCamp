<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campgound</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" name="campground[title]" type="text" id="title" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" name="campground[location]" type="text" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">@</span>
                        <input type="text" class="form-control" name="campground[price]"
                            aria-describedby="basic-addon1 required" id="price" required>
                    </div>
                </div>
                <input type="file" name="image" multiple>
                <div class="mb-3">
                    <input multiple name="image" class="form-control" type="file" id="image">
                    <label for="image" class="form-label">
                        Choose imgame(s)
                    </label>
                    
                  </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" name="campground[image]" type="text" id="image" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea required class="form-control" name="campground[description]" type="text"
                        id="description"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>

            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>